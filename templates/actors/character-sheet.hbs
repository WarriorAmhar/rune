<form class="{{cssClass}} rune-sheet" autocomplete="off">
  <div class="sheet-header">
    <div class="header-grid">
      <!-- Portrait -->
      <div class="portrait-section">
        <img class="portrait" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" alt="{{actor.name}}" />
        <div class="portrait-hint">LIPE SUA IMAGEM AQUI<br>600x900 px</div>
      </div>

      <!-- Right side fields -->
      <div class="header-right">
        <!-- Top Fields -->
        <div class="top-fields">
          <div class="field name-field">
            <label>Nome</label>
            <input type="text" name="name" value="{{actor.name}}" placeholder="Nome do Personagem" />
          </div>
          <div class="field">
            <label>Pronomes</label>
            <input type="text" name="system.pronouns" value="{{system.pronouns}}" placeholder="ele/ela" />
          </div>
          <div class="field">
            <label>Origen</label>
            <input type="text" name="system.origin" value="{{system.origin}}" placeholder="Noxus" />
          </div>
          <div class="field">
            <label>Clase</label>
            <input type="text" name="system.class" value="{{system.class}}" placeholder="Guerreiro" />
          </div>
        </div>

        <!-- Approaches (Poder, Astucia, Visão) -->
        <div class="stats-row">
          <div class="stat-box might-stat" data-approach="might">
            <label>Poder</label>
            <input type="number" name="system.approaches.might" value="{{system.approaches.might}}" data-dtype="Number" />
            <a class="stat-roll" data-approach="might" title="Rolar Poder">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          <div class="stat-box guile-stat" data-approach="guile">
            <label>Astúcia</label>
            <input type="number" name="system.approaches.guile" value="{{system.approaches.guile}}" data-dtype="Number" />
            <a class="stat-roll" data-approach="guile" title="Rolar Astúcia">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          <div class="stat-box vision-stat" data-approach="vision">
            <label>Visão</label>
            <input type="number" name="system.approaches.vision" value="{{system.approaches.vision}}" data-dtype="Number" />
            <a class="stat-roll" data-approach="vision" title="Rolar Visão">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
        </div>

        <!-- Derived Stats (Armor, Vigor, Magic Resist) -->
        <div class="derived-stats-row">
          <div class="symbol-stat">
            <div class="symbol-bg">
              <img src="https://i.imgur.com/GZLOyzg.png" alt="Armor" />
            </div>
            <input type="number" name="system.armor" value="{{system.armor}}" data-dtype="Number" />
            <label>Armor</label>
          </div>
          <div class="symbol-stat vigor-stat">
            <div class="symbol-bg">
              <img src="https://i.imgur.com/8Il9Pbp.png" alt="Vigor" />
            </div>
            <div class="vigor-values">
              <input type="number" name="system.stamina.value" value="{{system.stamina.value}}" data-dtype="Number" class="vigor-current" />
              <span class="vigor-separator">/</span>
              <input type="number" name="system.stamina.max" value="{{system.stamina.max}}" data-dtype="Number" class="vigor-max" />
            </div>
            <label>Vigor</label>
          </div>
          <div class="symbol-stat">
            <div class="symbol-bg">
              <img src="https://i.imgur.com/OLamXRL.png" alt="Magic Resist" />
            </div>
            <input type="number" name="system.magicResist" value="{{system.magicResist}}" data-dtype="Number" />
            <label>Magic Resist</label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Middle Section: Description and Spells/Inventions -->
  <div class="middle-section">
    <div class="text-box">
      <h3><i class="fas fa-book"></i> Descrição</h3>
      <div class="editor">
        {{editor system.biography target="system.biography" button=true owner=owner editable=editable}}
      </div>
    </div>
    <div class="text-box">
      <h3><i class="fas fa-magic"></i> Magias / Invenções</h3>
      <div class="editor">
        {{editor system.spellsInventions target="system.spellsInventions" button=true owner=owner editable=editable}}
      </div>
    </div>
  </div>

  <!-- Tabs Navigation -->
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="inventory"><i class="fas fa-backpack"></i> Inventário</a>
    <a class="item" data-tab="traits"><i class="fas fa-star"></i> Traits</a>
    <a class="item" data-tab="spells"><i class="fas fa-hat-wizard"></i> Feitiços</a>
  </nav>

  <!-- Tab Content -->
  <section class="sheet-body">
    <!-- Inventory Tab -->
    <div class="tab" data-group="primary" data-tab="inventory">
      <div class="items-header">
        <div class="item-name">Nome</div>
        <div class="item-type">Tipo</div>
        <div class="item-qty">Qtd</div>
        <div class="item-equipped">Equipado</div>
        <div class="item-controls">
          <a class="item-control item-create" title="Criar Item" data-type="equipment">
            <i class="fas fa-plus"></i> Adicionar
          </a>
        </div>
      </div>

      <ol class="items-list">
        {{#each items as |item id|}}
          {{#if (or (eq item.type "equipment") (eq item.type "weapon") (eq item.type "armor"))}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" alt="{{item.name}}" />
              </div>
              <h4 class="item-name">
                <a class="item-edit">{{item.name}}</a>
              </h4>
              <div class="item-type">{{capitalize item.type}}</div>
              <div class="item-qty">
                <input type="number" name="items.{{item._id}}.system.quantity" value="{{item.system.quantity}}" data-dtype="Number" />
              </div>
              <div class="item-equipped">
                {{#if item.system.equipped}}
                  <input type="checkbox" name="items.{{item._id}}.system.equipped" checked data-item-id="{{item._id}}" class="toggle-equipped" />
                {{else}}
                  <input type="checkbox" name="items.{{item._id}}.system.equipped" data-item-id="{{item._id}}" class="toggle-equipped" />
                {{/if}}
              </div>
              <div class="item-controls">
                <a class="item-control item-delete" title="Deletar" data-item-id="{{item._id}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ol>

      <!-- Currency -->
      <div class="currency-section">
        <label><i class="fas fa-coins"></i> Moedas</label>
        <input type="number" name="system.currency" value="{{system.currency}}" data-dtype="Number" placeholder="1000" />
      </div>
    </div>

    <!-- Traits Tab -->
    <div class="tab" data-group="primary" data-tab="traits">
      <div class="items-header">
        <div class="item-name">Nome</div>
        <div class="item-type">Tipo</div>
        <div class="item-advantage">Vantagem</div>
        <div class="item-controls">
          <a class="item-control item-create" title="Criar Trait" data-type="trait">
            <i class="fas fa-plus"></i> Adicionar
          </a>
        </div>
      </div>

      <ol class="items-list">
        {{#each items as |item id|}}
          {{#if (eq item.type "trait")}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" alt="{{item.name}}" />
              </div>
              <h4 class="item-name">
                <a class="item-edit">{{item.name}}</a>
              </h4>
              <div class="item-type">{{capitalize item.system.traitType}}</div>
              <div class="item-advantage">
                {{#if item.system.grantsAdvantage}}
                  <i class="fas fa-check-circle" style="color: var(--rune-success);" title="Concede Vantagem"></i>
                {{else}}
                  <i class="fas fa-times-circle" style="color: #666;" title="Não concede vantagem"></i>
                {{/if}}
              </div>
              <div class="item-controls">
                <a class="item-control item-delete" title="Deletar" data-item-id="{{item._id}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ol>
    </div>

    <!-- Spells Tab -->
    <div class="tab" data-group="primary" data-tab="spells">
      <div class="items-header">
        <div class="item-name">Nome</div>
        <div class="item-school">Escola</div>
        <div class="item-range">Alcance</div>
        <div class="item-controls">
          <a class="item-control item-create" title="Criar Feitiço" data-type="spell">
            <i class="fas fa-plus"></i> Adicionar
          </a>
        </div>
      </div>

      <ol class="items-list">
        {{#each items as |item id|}}
          {{#if (eq item.type "spell")}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" alt="{{item.name}}" />
              </div>
              <h4 class="item-name">
                <a class="item-edit">{{item.name}}</a>
              </h4>
              <div class="item-school">{{item.system.spellSchool}}</div>
              <div class="item-range">{{item.system.range}}</div>
              <div class="item-controls">
                <a class="item-control item-cast" title="Conjurar" data-item-id="{{item._id}}">
                  <i class="fas fa-magic"></i>
                </a>
                <a class="item-control item-delete" title="Deletar" data-item-id="{{item._id}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </section>
</form>
